#include "config.h"
//#include <xc.h>
#include "reloj.h"
#include <string.h> 
//#include "../h/p24F16KA102.h"
#include <libpic30.h>

 

 
int m=0;
int tiempo_vis=8;
int tiempo=10;
int main(void) {
    //Configuracion micro 
    AD1PCFG=0xFFFF;//todo como digital
    TRISB=0x0000;
    TRISBbits.TRISB11=1; //definir puerto como entrada
    //Declaracion de variables

 

 
    int i,j,k,l=0;
    //int m=0;// cambiar este valor reeplazar luego con el boton
    while(1){
        // conteo ascendente 
        if (m==0){
            if(l==9& k==9 & j==9 & i>9){
                k=0;
                j=0;
                i=0;
                l=0;
            }
            if(k==9 & j==9 & i>9){
                k=0;
                j=0;
                i=0;
                l++;
            }
            if(j==9 & i>9){
                j=0;
                i=0;
                k++;
            } 
            if(i>9){
                i=0;
                j++;
            }
            numero(i,j,k,l);
            i++;
        }
        else{
            // conteo decendente
            if(l==0 & k==0 & j==0 & i==0){
                k=9;
                j=9;
                i=9;
                l=9;
            }
            if(k==0 & j==0 & i<0){
                k=9;
                j=9;
                i=9;
                l--;
            }
            if(j==0 & i<0){
                j=9;
                i=9;
                k--;
            } 
            if(i<0){
                i=9;
                j--;
            }
            numero(i,j,k,l);
            i--;
        }
    }
   return 0;
}

int boton(){
    if(PORTBbits.RB11==1){
        //__delay_ms(120);
        while(PORTBbits.RB11==1); //se detecto un pulso
        if(m>1){
        m=0;
        }
        else{
        m++;
        }
    }
    return m;
};

void disp1(){
  //prender numero 1
    PORTBbits.RB7=0;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    PORTBbits.RB10=1;
    boton();
}

 

void disp2(){
  //prender numero 2
    PORTBbits.RB7=0;
    PORTBbits.RB8=0;
    PORTBbits.RB9=1;
    PORTBbits.RB10=0;
    boton();
}

 

void disp3(){
  //prender numero 3
    PORTBbits.RB7=0;
    PORTBbits.RB8=1;
    PORTBbits.RB9=0;
    PORTBbits.RB10=0;
    boton();
}

 

void disp4(){
  //prender numero 4
    PORTBbits.RB7=1;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    PORTBbits.RB10=0;
    boton();
}
void dispa(){  
    PORTBbits.RB7=0;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    PORTBbits.RB10=0;
    boton(); 
}
void numero(int i ,int j, int k, int l){
    int c=0;
    while(c<tiempo){
        //numero para el primer display
        switch(i){
            case 0:
                disp1();
                cero ();
            case 1:

                disp1();
                uno();
            break;
            case 2:

                disp1();
                dos();
            break;
            case 3:

                disp1();
                tres();
            break;
            case 4:               
                disp1(); 
                cuatro();
            break;
            case 5:               
                disp1(); 
                cinco();
            break;
            case 6:               
                disp1(); 
                seis();
            break;
            case 7:               
                disp1(); 
                siete();
            break;
            case 8:               
                disp1(); 
                ocho();
            break;
            case 9:               
                disp1(); 
                nueve();
            break;
        }
        dispa();
        //numero para el segundo display
        switch(j){
            case 0:
                disp2();
                cero ();
            case 1:

                disp2();
                uno();
            break;
            case 2:

                disp2();
                dos();
            break;
            case 3:

                disp2();
                tres();
            break;
            case 4:               
                disp2(); 
                cuatro();
            break;
            case 5:               
                disp2(); 
                cinco();
            break;
            case 6:               
                disp2(); 
                seis();
            break;
            case 7:               
                disp2(); 
                siete();
            break;
            case 8:               
                disp2(); 
                ocho();
            break;
            case 9:               
                disp2(); 
                nueve();
            break;
        }
        dispa();
        //numero para el tercer display
        switch(k){
            case 0:
                disp3();
                cero ();
            case 1:

                disp3();
                uno();
            break;
            case 2:

                disp3();
                dos();
            break;
            case 3:

                disp3();
                tres();
            break;
            case 4:               
                disp3(); 
                cuatro();
            break;
            case 5:               
                disp3(); 
                cinco();
            break;
            case 6:               
                disp3(); 
                seis();
            break;
            case 7:               
                disp3(); 
                siete();
            break;
            case 8:               
                disp3(); 
                ocho();
            break;
            case 9:               
                disp3(); 
                nueve();
            break;
        }
        dispa();
        //numero para el cuarto display
        switch(l){
            case 0:
                disp4();
                cero ();
            case 1:

                disp4();
                uno();
            break;
            case 2:

                disp4();
                dos();
            break;
            case 3:

                disp4();
                tres();
            break;
            case 4:               
                disp4(); 
                cuatro();
            break;
            case 5:               
                disp4(); 
                cinco();
            break;
            case 6:               
                disp4(); 
                seis();
            break;
            case 7:               
                disp4(); 
                siete();
            break;
            case 8:               
                disp4(); 
                ocho();
            break;
            case 9:               
                disp4(); 
                nueve();
            break;
        }
        dispa();
        c++; 
    }
}

 


//numeros

 

void cero(){
    PORTBbits.RB0=0;
    PORTBbits.RB1=0;
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB6=1;
    __delay_ms(tiempo_vis);
 }

 void uno(){
     PORTBbits.RB0=1;
     PORTBbits.RB1=0;
     PORTBbits.RB2=0;
     PORTBbits.RB3=1;
     PORTBbits.RB4=1;
     PORTBbits.RB5=1;
     PORTBbits.RB6=1;
     __delay_ms(tiempo_vis);
 }

void dos(){
    PORTBbits.RB0=0;
    PORTBbits.RB1=0;
    PORTBbits.RB2=1;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=1;
    PORTBbits.RB6=0;
    __delay_ms(tiempo_vis);
 }

void tres(){
    PORTBbits.RB0=0;
    PORTBbits.RB1=0;
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=1;
    PORTBbits.RB5=1;
    PORTBbits.RB6=0;
    __delay_ms(tiempo_vis);
 }

void cuatro(){
    PORTBbits.RB0=1;
    PORTBbits.RB1=0;
    PORTBbits.RB2=0;
    PORTBbits.RB3=1;
    PORTBbits.RB4=1;
    PORTBbits.RB5=0;
    PORTBbits.RB6=0;
    
    __delay_ms(tiempo_vis);
}
void cinco(){
    PORTBbits.RB0=0;
    PORTBbits.RB1=1;
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=1;
    PORTBbits.RB5=0;
    PORTBbits.RB6=0;
    __delay_ms(tiempo_vis);
 }


 void seis(){
     PORTBbits.RB0=0;
     PORTBbits.RB1=1;
     PORTBbits.RB2=0;
     PORTBbits.RB3=0;
     PORTBbits.RB4=0;
     PORTBbits.RB5=0;
     PORTBbits.RB6=0;
 __delay_ms(tiempo_vis);
 }



void siete(){
    PORTBbits.RB0=0;
    PORTBbits.RB1=0;
    PORTBbits.RB2=0;
    PORTBbits.RB3=1;
    PORTBbits.RB4=1;
    PORTBbits.RB5=1;
    PORTBbits.RB6=1;
    __delay_ms(tiempo_vis);
 }



void ocho(){
    PORTBbits.RB0=0;
    PORTBbits.RB1=0;
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB6=0;
    __delay_ms(tiempo_vis);
 }



void nueve(){
    PORTBbits.RB0=0;
    PORTBbits.RB1=0;
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=1;
    PORTBbits.RB5=0;
    PORTBbits.RB6=0;
    __delay_ms(tiempo_vis);
 }
