#include "config.h"
//#include <xc.h>
#include "reloj.h"
#include <string.h> 
//#include "../h/p24F16KA102.h"
#include <libpic30.h>




int m=0;
int tiempo=350;
int tiempo_vis=48;
int main(void) {
    //Configuracion micro 
    AD1PCFG=0xFFFF;//todo como digital
    TRISB=0x0000;
    TRISBbits.TRISB13=1; //definir puerto como entrada
    //Declaracion de variables

 

 
    int i,j=0;
    //int m=0;// cambiar este valor reeplazar luego con el boton
    while(1){
        disp1(i);
        boton();
        disp2(j);
        boton();
        dispa(j);
        boton();
         __delay_ms(tiempo);
        // conteo ascendente 
        if (m==0){
            if(j==9 & i==9){
                j=0;
                i=0;
                disp1(i);
                disp2(j);
                dispa(j);
            } 
            if(i==9){
                i=0;
                j++;
                disp1(i);
                disp2(j);
                dispa(j);
            }
            i++;
        }
        else{
            // conteo descendente
            if(j==0 & i==0){
                j=9;
                i=9;
                disp1(i);
                disp2(j);
                dispa(j);
            } 
            if(i==0){
                i=9;
                j--;
                disp1(i);
                disp2(j);
                dispa(j);
            }
            i--;
        }
    }
   return 0;
}

int boton(){
    if(PORTBbits.RB13==1){
        //__delay_ms(120);
        while(PORTBbits.RB13==1); //se detecto un pulso
        if(m>1){
        m=0;
        }
        else{
        m++;
        }
    }
    return m;
}

void disp1(int a){
  //prender numero 1
    PORTBbits.RB10=0;
    PORTBbits.RB11=1;
    numero(a);
}

 

void disp2(int a){
  //prender numero 2
    PORTBbits.RB10=1;
    PORTBbits.RB11=0;
    numero(a);
}

void dispa(int a){  
    PORTBbits.RB10=0;
    PORTBbits.RB11=0;
    numero(a);
    
}
void numero(int b){
    switch(b){
            case 0: 
                cero();
            break;
            case 1: 
                uno();
            break;
            case 2:
                dos();
            break;
            case 3:
                tres();
            break;
            case 4:                
                cuatro();
            break;
            case 5:
                cinco();
            break;
            case 6:
                seis();
            break;
            case 7:
                siete();
            break;
            case 8:
                ocho();
            break;
            case 9:
                nueve();
            break;
        }
};

 


//numeros

 

void cero(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=0;
    PORTBbits.RB8=0;
    PORTBbits.RB9=1;
    __delay_ms(tiempo_vis);
 }

 void uno(){
     PORTBbits.RB2=1;
     PORTBbits.RB3=0;
     PORTBbits.RB4=0;
     PORTBbits.RB5=1;
     PORTBbits.RB7=1;
     PORTBbits.RB8=1;
     PORTBbits.RB9=1;
     __delay_ms(tiempo_vis);
 }

void dos(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=1;
    PORTBbits.RB5=0;
    PORTBbits.RB7=0;
    PORTBbits.RB8=1;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }

void tres(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=1;
    PORTBbits.RB8=1;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }

void cuatro(){
    PORTBbits.RB2=1;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=1;
    PORTBbits.RB7=1;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    
    __delay_ms(tiempo_vis);
}
void cinco(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=1;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=1;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }


 void seis(){
     PORTBbits.RB2=0;
     PORTBbits.RB3=1;
     PORTBbits.RB4=0;
     PORTBbits.RB5=0;
     PORTBbits.RB7=0;
     PORTBbits.RB8=0;
     PORTBbits.RB9=0;
 __delay_ms(tiempo_vis);
 }



void siete(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=1;
    PORTBbits.RB7=1;
    PORTBbits.RB8=1;
    PORTBbits.RB9=1;
    __delay_ms(tiempo_vis);
 }



void ocho(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=0;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }



void nueve(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=1;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }
