//numeros

 

void cero(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=0;
    PORTBbits.RB8=0;
    PORTBbits.RB9=1;
    __delay_ms(tiempo_vis);
 }

 void uno(){
     PORTBbits.RB2=1;
     PORTBbits.RB3=0;
     PORTBbits.RB4=0;
     PORTBbits.RB5=1;
     PORTBbits.RB7=1;
     PORTBbits.RB8=1;
     PORTBbits.RB9=1;
     __delay_ms(tiempo_vis);
 }

void dos(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=1;
    PORTBbits.RB5=0;
    PORTBbits.RB7=0;
    PORTBbits.RB8=1;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }

void tres(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=1;
    PORTBbits.RB8=1;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }

void cuatro(){
    PORTBbits.RB2=1;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=1;
    PORTBbits.RB7=1;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    
    __delay_ms(tiempo_vis);
}
void cinco(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=1;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=1;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }


 void seis(){
     PORTBbits.RB2=0;
     PORTBbits.RB3=1;
     PORTBbits.RB4=0;
     PORTBbits.RB5=0;
     PORTBbits.RB7=0;
     PORTBbits.RB8=0;
     PORTBbits.RB9=0;
 __delay_ms(tiempo_vis);
 }



void siete(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=1;
    PORTBbits.RB7=1;
    PORTBbits.RB8=1;
    PORTBbits.RB9=1;
    __delay_ms(tiempo_vis);
 }



void ocho(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=0;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }

void nueve(){
    PORTBbits.RB2=0;
    PORTBbits.RB3=0;
    PORTBbits.RB4=0;
    PORTBbits.RB5=0;
    PORTBbits.RB7=1;
    PORTBbits.RB8=0;
    PORTBbits.RB9=0;
    __delay_ms(tiempo_vis);
 }
